<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="top"
        android:background="@drawable/bg_lm_titlebar"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <!-- 返回 -->

        <ImageButton
            android:id="@+id/titleBack"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_titlebar_noline_selector"
            android:gravity="center"
            android:src="@drawable/ic_titlebar_back" />
        <!-- Title -->

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="title"
            android:textColor="#FFFFFF"
            android:textSize="20dip" />

        <!-- 分享 -->

        <ImageButton
            android:id="@+id/titleImageButtonRight_share"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_titlebar_noline_selector"
            android:gravity="center_vertical|center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <!-- 收藏 -->

        <ImageButton
            android:id="@+id/titleImageButtonRight_mark"
            android:layout_width="54dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_titler_bar_right_btn_selector"
            android:gravity="center_vertical|center"
            android:textColor="#FFFFFF"
            android:textSize="18dip"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>